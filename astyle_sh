#!/bin/sh

filename=$1

if   [ "${filename#*.}" = "c" ] || [ "${filename#*.}" = "cpp" ] \
  || [ "${filename#*.}" = "h" ] || [ "${filename#*.}" = "hpp" ] ;
then
#/bin/astyle -cs2CSKNwYMm2pPDHk1n $filename  >/dev/null
	~/.vim/astyle --style=allman \
			 				--indent=spaces=2 \
			 				--indent-modifiers \
							--indent-classes \
			 				--indent-switches \
			 				--indent-namespaces \
			 				--indent-preproc-block \
			 				--indent-preproc-define \
			 				--indent-preproc-cond \
			 				--indent-col1-comments \
			 				--min-conditional-indent=2 \
			 				--max-instatement-indent=40 \
			 				--break-blocks \
							--pad-oper \
			 				--pad-paren \
							--pad-paren-in \
			 				--align-pointer=type \
			 				--align-reference=type \
			 				--suffix=none \
			 				--formatted \
			 				$filename >/dev/null
fi

#--delete-empty-lines \
#--max-code-length=80 \
#--break-after-logical \
